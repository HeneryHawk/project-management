{
    "compilerOptions": {
        "lib": ["ES2020"],
        "module": "commonjs",
        "removeComments": true,
        "moduleResolution": "node",
        "typeRoots": ["./node_modules/@types"],
        "types": ["node", "reflect-metadata"],
        "outDir": "./gen/srv",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
